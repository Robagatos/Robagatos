<!-- Modal -->
<div class="modal fade" id="solicitudDueloModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><span id="pjDuelista"></span>, Se te ha solicitado un Duelo</h5>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-header">
                        <div><b>Selecciona una actitud Frente al duelo.</b></div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="form-check ">
                                    <input class="form-check-input" type="radio" name="flexRadioDuelo" id="dispararPrimeroDuelo">
                                    <label class="form-check-label " for="dispararPrimeroDuelo" data-toggle="tooltip" data-html="true" title="Permite sumar 5 a la iniciativa">Disparar Primero</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDuelo" id="asegurarDuelo">
                                    <label class="form-check-label" for="asegurarDuelo" data-toggle="tooltip" data-html="true" title="Permite sumar 1 a la habilidad.">Asegurar el tiro</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card-header"><b>Capacidades Especiales</b></div>
                                <div class="form-check " id="cePlaceHolderDuelo">

                                </div>

                                <div class="card-header"><b>Equipo</b></div>
                                <div class="form-check" id="equipoPlaceHolderDuelo">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="pjDuelo" style="display: none;"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg rounded-pill btn-success ripple" data-dismiss="modal" onclick="aceptarDuelo()">Aceptar</button>
                <button type="button" class="btn btn-lg rounded-pill btn-danger ripple" data-dismiss="modal">Rechazar</button>
            </div>
        </div>
    </div>
</div>